<div id="movement-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title center">Actualiza Movimiento</h4>
            </div>

          <%= form_for :movement, url: user_account_movement_path(@movement.id), method: :patch ,remote:true do |f| %>

            <div class="modal-body">
                <div class="alert alert-danger" role="alert" style="display: none;"></div>
                <%= f.hidden_field :account_id, :value => params[:account_id] %>
                <%= f.hidden_field :user_id, :value => params[:user_id] %>

                <div class="field">
                    <%= f.label "Concepto de Pago" %>
                    <%= f.text_field :concepto_de_pago ,class: 'form-control', size: 40  %>
                </div>

                <div style="width:5em" class="field">
                    <%= f.label "Referencia" %>
                    <%= f.text_field :reference ,class: 'form-control', placeholder:"Sin referencia"%>
                </div>

                <div class="input-group date" style="width: 5em">
                    <%= f.label "Fecha" %>
                    <%= f.text_field :date, class: 'form-control', "data-provide" => "datepicker", "data-date-language" => 'es', "data-date-today-highlight" => true, "data-date-today-btn" => true %>
                </div>

                <div class="field">
                    <%= f.label "Detalles" %>
                    <%= f.text_field :detail ,class: 'form-control', size: 40 %>
                </div>

                <div class="field"  style="width: 10em; top:20px;">
                    <%= f.label "Categoria"%>
                    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
                </div>
                
                <div class="horizontal">
                    <%= f.label "Retiro"%>
                    <%= f.text_field :withdrawal, class: 'form-control dig', size: 10, value: 0 %>
                </div>

                <div class="horizontal">
                    <%= f.label "Deposito"%>
                    <%= f.text_field :deposit, class: 'form-control dig', size: 10, value: 0 %>
                </div>
            </div>

            <div class="modal-footer">
                <%= f.submit class:"btn btn-primary btn-lg btn-block" , value:"Guardar"%>
            </div>
            <% end %>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
