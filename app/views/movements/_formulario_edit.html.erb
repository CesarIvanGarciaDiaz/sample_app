<div id="movement-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title center">Actualiza Movimiento</h4>
            </div>

          <%= form_for :movement, url: user_account_movement_path(@movement.id), method: :patch ,remote:true do |f| %>

            <div class="modal-body">
                <div class="alert alert-danger" role="alert" style="display: none;"></div>
                <%= f.hidden_field :account_id, :value => params[:account_id] %>
                <%= f.hidden_field :user_id, :value => params[:user_id] %>

                <div class="field">
                    <%= f.label :concepto_de_pago %>
                    <%= f.text_field :concepto_de_pago ,class: 'form-control' %>
                </div>

                <div class="field">
                    <%= f.label :reference %>
                    <%= f.text_field :reference ,class: 'form-control' %>
                </div>

                <div class="input-group date">
                    <%= f.label :date %>

                    <%= f.text_field :date, class: 'form-control', "data-provide" => "datepicker", "data-date-language" => 'es',
   "data-date-today-highlight" => true, "data-date-today-btn" => true %>

                </div>

                <div class="field">
                    <%= f.label :detail %>
                    <%= f.text_field :detail ,class: 'form-control' %>
                </div>

                <div class="field">
                    <%= f.label "Categoria"%>
                    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
                </div>

            </div>

            <div class="modal-footer">
                <%= f.submit class:"btn btn-primary btn-lg btn-block" , value:"Guardar"%>
            </div>
            <% end %>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
