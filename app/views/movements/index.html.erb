<p id="notice"><%= notice %></p>

<% @cuenta = Account.find(params[:account_id])%>
<h1>Movimientos de <%= @cuenta.name %></h1>
<table class="table table-striped table-hover ">
  <thead class="thead-inverse">
    <tr>
      <th>Concepto de pago</th>
      <th>Referencia</th>
      <th>Fecha</th>
      <th>Mes</th>
      <th>Detalle</th>
      <th>Categoria</th>
      <th>Retiro</th>
      <th>Deposito</th>
      <th>Saldo</th>
    </tr>
  </thead>
  <%= render "row", movement: :movement  %>
</table>

<br>
<div class="container">
  <div class="center">
    <%= link_to 'Nuevo Movimiento', new_user_account_movement_path(current_user),remote:true,class:'btn btn-primary btn_new_mvnt'  %>
  </div>
</div>