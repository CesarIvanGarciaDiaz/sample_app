

<div class="col-md-15">
  <div class="well bs-component">
<%= form_for :movement do |f| %>
<% if movement.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(movement.errors.count, "error") %> prohibited this movement from being saved:</h2>

     <ul>
     <% movement.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
     </ul>
   </div>
 <% end %>
    
    <%= f.hidden_field :account_id, :value => params[:account_id] %>
    <%= f.hidden_field :user_id, :value => params[:user_id] %>

    <div class="field">
      <%= f.label :concepto_de_pago %>
      <%= f.text_field :concepto_de_pago ,class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :reference %>
      <%= f.text_field :reference ,class: 'form-control' %>
    </div>

    <div class="input-group date">
      <%= f.label :date %>
      <%= f.text_field :date, class: 'form-control', "data-provide" => "datepicker", "data-date-language" => 'es', 
      "data-date-today-highlight" => true, "data-date-today-btn" => true %>
    </div>

    <div class="field">
      <%= f.label :detail %>
      <%= f.text_field :detail ,class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label "Categoria"%>
      <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-primary" ,value:"Guardar"%>
    </div>
  <% end %>
</form>
</div>
</div>
