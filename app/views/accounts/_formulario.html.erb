<div id="account-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title center">Nueva cuenta</h4>
</div>
      <%= form_for :account, remote: true do |f| %>
      <div class="modal-body">
  <div class="alert alert-danger" role="alert" style="display: none;"></div>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name ,class: "form-control input-lg account-name", placeholder: "Nombre de la cuenta" %>
      </div>


 </div>

        <div class="modal-footer">
            <%= f.submit class:"btn btn-primary btn-lg btn-block" , value:"Guardar"%>
        </div>
        <% end %>
       </div><!-- /.modal-content -->
     </div><!-- /.modal-dialog -->
   </div><!-- /.modal -->
