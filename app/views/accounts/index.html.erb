
<p id="notice"><%= notice %></p>
<h1>Seleccione la cuenta a administrar</h1>

<div class="boton_creado">

</div>

<% @accounts.each do |account| %>

<!-- Acount.all -->
<div class="social">

<div class='front'>
<%= account.name%>
</div>
<div class='back'>
<%= link_to account.name, user_account_movements_path(session[:user_id],account.id),class:"btn btn",style:"width:200px;height:50px;margin-top:-3px;margin-left:0px;padding:15% 25%; background-color: white;"%>
<%= link_to 'Edit',edit_user_account_path(session[:user_id],account.id) ,class:"btn btn-raised btn-success" %>
<%= link_to 'Destroy',user_account_path(session[:user_id],account.id),class:"btn btn-raised btn-warning " ,style:"background-color: #F44336!important;", method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
</div>
<% end %>

<%= link_to 'New Account', new_user_account_path, class:'btn btn-info' %>
