  // add the row to the table, show alert and hide modal
  $('table tbody tr#<%= @account.id %>').replaceWith(' <%= j render "row", account: @account %>');
  $('.alert-success').html("La cuenta ha sido modificada con Ã©xito").show();
  $('#account-modal').modal('hide');
<% else %>
