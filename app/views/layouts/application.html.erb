<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %><!-- agrega el parcial de IE  -->
  </head>
  <body>
    <%= render 'layouts/header' %><!-- agrega el parcial de header -->
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <br><br>
      <%= yield %>
      <br>
      <br>
      <br>
      <%= render 'layouts/footer' %><!-- agrega el parcial de footer -->
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
