<style media="screen">
    .btn {
        width: 10px;
        height: 35px;
        margin: 0 auto;
    }

</style>
<p id="notice"><%= notice %></p>
<h1>Lista de Categorias</h1>

<div style="display: block; width: 100%; margin:10px;">

    <div class="btn-group">
        <a class="btn btn-info" style="width: 7em">Filtrar</a>
        <a href="bootstrap-elements.html" data-target="#" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style="width:3em">
            <span class="caret"></span>
            <div class="ripple-container"></div>
        </a>

        <ul class="dropdown-menu">
            <li>
                <a><%=link_to "Egreso", :csfct => "e"%></a>
            </li>
            <li>
                <a><%=link_to "Ingreso", :csfct => "i"%></a>
            </li>
            <li>
                <a><%=link_to "Neutro", :csfct => "n"%></a>
            </a>
        </li>
        <li class="divider"></li>
        <li>
            <a><%=link_to "Reset", user_categories_path(current_user)%></a>
        </li>
    </ul>
</div>
</div>

<% @categories.each do |category| %>

<div class="social">

<div class='front'>
    <%= render "row", category: category %>
</div>
<div class='back'>
    <br>
    <p><%= Category.resolverEstado(category.classification ) %></p>

    <%= link_to raw("<i class='material-icons '>edit</i>"),edit_user_category_path(current_user,category.id) ,remote: true,class:"btn btn-success center ",style:"display: inline-block; width:3em; padding:0!important; position:absolute; bottom:0;
    left:0;"%>
    <%= link_to raw("<i class='material-icons '>delete_sweep</i>"),user_category_path(current_user,category.id),class:"btn btn-raised btn-warning center" ,style:"background-color: #FF3333!important;display: inline-block; width:3em; padding: 0!important;
    position:absolute; bottom:0; right:0;", method: :delete, data: { confirm: 'Are you sure?' } %>

</div>
</div>
<% end %>
